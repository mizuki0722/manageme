<%= form_with(model: @blog, local: true, html: { class: "custom-blog-form" }) do |form| %>
  <h2 class="form-title">今日の運動メニュー</h2>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <div class="input-wrapper">
      <i class="input-icon fas fa-dumbbell"></i> <!-- fontawesomeのアイコン例 -->
      <%= form.text_field :title, class: "form-input", placeholder: "タイトルを入力" %>
    </div>
  </div>



  <div class="form-group">
    <%= form.label :content, class: "form-label" %>
    <div class="input-wrapper">
      <i class="input-icon fas fa-pen"></i>
      <%= form.text_area :content, class: "form-input", rows: 4, placeholder: "内容を入力" %>
    </div>
  </div>

  <div class="form-submit">
    <%= form.submit "投稿する", class: "submit-button" %>
  </div>
<% end %>

