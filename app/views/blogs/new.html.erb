
<%= form_with(model: [@diet, @blog], local: true, class: "post-form") do |form| %>

  <div class="form-group title">
    <%= form.label :title, "今日の運動メニュー" %>
    <%= form.text_field :title, placeholder: "例：ヒップリフト3分、スクワット10回など" %>
  </div>

 
  
  <div class="form-group content">
    <%= form.label :content, "内容" %>
    <%= form.text_area :content, placeholder: "運動の感想やメモを書いてね", rows: 5 %>
  </div>

  <div class="form-group submit">
    <%= form.submit "投稿する" %>
  </div>

<% end %>
