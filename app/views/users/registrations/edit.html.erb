<div class="edit-form-wrapper">
  <h2>プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, "プロフィール画像" %>
      <%= f.file_field :avatar, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>確認待ちのメール: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="form-group">
      <%= f.label :password, "パスワード変更" %>
      <small>（変更しない場合は空欄でOK）</small>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      <% if @minimum_password_length %>
        <small><%= @minimum_password_length %>文字以上</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, "現在のパスワード" %>
      <small>（変更を保存するために必要です）</small>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="form-submit">
      <%= f.submit "更新する", class: "submit-button" %>
    </div>
  <% end %>

  <h3>アカウント削除</h3>
  <p>本当に退会しますか？</p>
  <div class="form-submit">
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "delete-button" %>
  </div>

  <div class="back-link">
    <%= link_to "戻る", :back %>
  </div>
</div>

