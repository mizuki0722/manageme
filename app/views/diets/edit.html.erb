<%= form_for @diet, html: { class: "edit-diet-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "題名", class: "form-label" %>
    <%= f.text_field :name, class: "form-input", placeholder: "例：朝の筋トレ" %>
  </div>

  <div class="form-group">
    <%= f.label :about, "内容", class: "form-label" %>
    <%= f.text_area :about, class: "form-textarea", placeholder: "どんな内容か入力してください", rows: 3 %>
  </div>

  <div class="form-group submit">
    <%= f.submit "編集する", class: "form-submit" %>
  </div>
<% end %>
