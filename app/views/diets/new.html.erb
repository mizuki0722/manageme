<h1>Manage_me</h1>
<h3>新規投稿ページ</h3>
<%= form_for @diet, html: { class: "post-form" } do |f| %>
  <div class="field">
    <%= f.label :題名 %><br>
    <%= f.text_field :name, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :内容 %><br>
    <%= f.text_area :about, size: "30x2" %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "💌 投稿する", class: "submit-btn" %>
<% end %>

<%= link_to "← 一覧に戻る", diets_path, class: "back-link" %>



